<html lang="en">
  <%- include( 'partials/head.ejs')  %>
    <body>  

    <%- include( 'partials/nav.ejs' ,)  %>
    <style>
      body{
        padding-bottom: 90px;
      }
      .container h1{
        padding-top: 40px;
        padding-bottom: 20px;
      }
      form{
        padding-top: 50px;
        padding-left: 200px;
        padding-right: 200px;
