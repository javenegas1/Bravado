<form method="POST" action="/bravado/<%= userPost.category %>/<%= userPost.id %>?_method=PUT">
  <h1>Hello <%=userPost.user%>! Did you make a mistake?</h1>

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= userPost.title %> ">
  </div>
  <div class="form-group">
    <label for="company">Company</label>
    <input type="text" class="form-control" id="company" name="company" value="<%= userPost.company %> ">
  </div>
  <div class="form-group">
    <label for="category">Category</label>
    <select class="form-control" id="category" name="category">
      <option value="tech">Tech</option>
      <option value="finance">Finance</option>
      <option value="general">General Advice</option>
    </select>
  </div>
  <div class="form-group">
    <label for="post">Post</label>
    <textarea class="form-control" type="text" id="post" name="post" rows="3"><%= userPost.post %></textarea>
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="text" class="form-control" id="image" name="image" value="<%= userPost.image %> ">
  </div>
  <!-- <div>
    <input id="editBtn" type="submit" value="Edit Post">
 </div> -->
 <button type="submit" class="btn btn-outline-danger">Edit Post</button>

</form>

    </body>
