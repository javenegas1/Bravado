<html lang="en">
  <%- include( 'partials/head.ejs')  %>
    <body>  

    <%- include( 'partials/nav.ejs' ,)  %>
    <style>
      body{
        padding-bottom: 90px;
      }
      .container h1{
        padding-top: 40px;
        padding-bottom: 20px;
      }
      .btn{
        margin-left: 500px;
      }
    </style>

        <main class="container">

          <h1>Hello <%=userPost.user%>! Did you make a mistake?</h1>
  
         <form action="/bravado" method="POST">
          <div class="form-group">
            <label for="exampleFormControlInput1">Title</label>
            <input type="text" class="form-control" name="title" id="title" value="<%= userPost.title %>">
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Company</label>
            <input type="text" class="form-control" name="company" id="company" value="<%= userPost.company %>">
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Category</label>
            <select class="form-control" name="category" id="category">
              <option value="tech">Tech</option>
              <option value="finance">Finance</option>
              <option value="general">General Advice</option>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Post</label>
            <textarea class="form-control" name="post" id="post" rows="3"><%= userPost.post %></textarea>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Image</label>
            <input type="text" class="form-control" name="image" id="image" value="<%= userPost.image %>">
          </div>
           <!-- <button class="button is-info">Submit</button> -->
           <button class="btn btn-outline-danger" id="editBtn" type="submit">Edit Post</button>
  
        </form>
  
       </main>

    </body>
</html>