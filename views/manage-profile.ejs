<body>
  <%- include( 'partials/nav.ejs')  %>

<style>
  h1{
    padding-top: 40px;
    padding-left: 20px;
    font-size: 25px;
  }
  form{
    padding-top: 20px;
    padding-left: 30px;
  }
  .deleteTrigger{
    padding-top: 20px;
    padding-left: 30px;
  }
  .btn{
    margin-left: 15px;
  }
  input{
    margin-left: 45px;
  }
  .list-group{
    padding-right: 750px;
  }
